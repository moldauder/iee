body,h1,h2,h3,h4,h5,h6,hr,p,blockquote,dl,dt,dd,ul,ol,li,pre,form,fieldset,legend,button,input,textarea,th,td{margin:0;padding:0}body,button,input,select,textarea{font:12px/1.5 tahoma,arial,\5b8b\4f53,sans-serif}h1,h2,h3,h4,h5,h6{font-size:100%}ul,ol{list-style:none}a{text-decoration:none}a:hover{text-decoration:underline}html,.stdpost .detail{background:url(http://pic.yupoo.com/iewei/C9TCNuSu/fQAH5.png) repeat}img{vertical-align:top;border:0}.stdpost{width:310px;margin:0 auto;padding:5px}.stdpost img{border:1px solid #efefef}.stdpost .title{font-size:16px;line-height:30px;text-align:center;padding:10px 0}.stdpost .content{color:#7f7f7f;line-height:24px;margin:20px 0;padding:0 1em;background:#f4f4f4;border:1px solid #e1e1e1;font-size:14px}.stdpost .content p{padding:1em 0}.stdpost .action{line-height:30px}.stdpost .price{font-family:arial;font-size:18px;margin-right:10px}.stdpost .action a{display:inline-block;vertical-align:top;background:#000;color:#fff;width:100px;height:30px;text-align:center;margin:0 10px;font-size:14px}.stdpost .action a:hover{text-decoration:none}.footer{padding-top:10px 0 5px;color:#aaa;text-align:center}