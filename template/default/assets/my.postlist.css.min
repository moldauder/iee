.grid-item{height:120px}.grid-item .item-title{font-size:14px;font-weight:700;height:21px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;color:#4183C4}.grid-item .item-title sup{font-weight:400;color:#b20000;padding-right:3px;position:relative;top:-4px}.grid-item .mark{margin-bottom:5px}.grid-item .mark .off{color:#a5a5a6}.grid-item .buylink{background:#338dcd;color:#fff;font-size:11px;font-style:italic;text-transform:uppercase;border-radius:3px;padding:1px 4px;line-height:14px;margin-right:5px}.grid-item .attr{line-height:14px}.grid-item .author,.grid-item .modified{margin:0 2px;font-weight:700}.grid input[type=checkbox]{position:relative;top:-1px}.item-action .remove,.item-action .untrash,.post-locked .item-action .edit,.post-locked .item-action .trash,.post-trash .item-action .trash,.post-trash .item-action .edit{display:none}.post-trash .item-action .untrash,.post-trash .item-action .remove{display:inline}.post-trash .item-title a{color:#999}